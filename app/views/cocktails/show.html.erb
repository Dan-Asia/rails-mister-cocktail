<p id="notice"><%= notice %></p>
<p>
  <strong>Cocktail Name:</strong>
  <%= @cocktail.name %>
</p>
<p>
<h2>Doses</h2>
<ul>
    <% @cocktail.doses.each do |dose| %>
      <li><%= dose.description %></li>
    <% end %>
</ul>
<h4>Ingredients</h4>
<ul>
  <% @cocktail.ingredients.each do |ingredient| %>
    <li><%= ingredient.name %>
    <% ingredient.doses.each do |dose|%>
      <%= dose.description %>
      <p><%= link_to "delete", dose_path(dose), method: :delete  %>
     <% end %></li>
<% end %>
</ul>



